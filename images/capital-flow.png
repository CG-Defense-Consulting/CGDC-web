<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a2332;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0b0f14;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#3aa0ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6ba07a;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="400" fill="url(#bgGradient)"/>
  
  <!-- Title -->
  <text x="300" y="40" text-anchor="middle" fill="#e6eef7" font-family="IBM Plex Sans, sans-serif" font-size="24" font-weight="600">Capital Partnership Flow</text>
  
  <!-- Flow Steps -->
  <!-- Source -->
  <g transform="translate(50, 100)">
    <rect x="0" y="0" width="100" height="80" rx="12" fill="url(#accentGradient)" opacity="0.1" stroke="#3aa0ff" stroke-width="2"/>
    <text x="50" y="30" text-anchor="middle" fill="#3aa0ff" font-family="IBM Plex Sans, sans-serif" font-size="14" font-weight="600">SOURCE</text>
    <text x="50" y="50" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">RFQ Analysis</text>
    <text x="50" y="65" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Market Research</text>
  </g>
  
  <!-- Arrow 1 -->
  <path d="M 170 140 L 200 140" stroke="#3aa0ff" stroke-width="3" fill="none" marker-end="url(#arrowhead)"/>
  
  <!-- Underwrite -->
  <g transform="translate(220, 100)">
    <rect x="0" y="0" width="100" height="80" rx="12" fill="url(#accentGradient)" opacity="0.1" stroke="#3aa0ff" stroke-width="2"/>
    <text x="50" y="30" text-anchor="middle" fill="#3aa0ff" font-family="IBM Plex Sans, sans-serif" font-size="14" font-weight="600">UNDERWRITE</text>
    <text x="50" y="50" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Due Diligence</text>
    <text x="50" y="65" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Risk Assessment</text>
  </g>
  
  <!-- Arrow 2 -->
  <path d="M 340 140 L 370 140" stroke="#3aa0ff" stroke-width="3" fill="none" marker-end="url(#arrowhead)"/>
  
  <!-- Execute -->
  <g transform="translate(390, 100)">
    <rect x="0" y="0" width="100" height="80" rx="12" fill="url(#accentGradient)" opacity="0.1" stroke="#3aa0ff" stroke-width="2"/>
    <text x="50" y="30" text-anchor="middle" fill="#3aa0ff" font-family="IBM Plex Sans, sans-serif" font-size="14" font-weight="600">EXECUTE</text>
    <text x="50" y="50" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Deploy Capital</text>
    <text x="50" y="65" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Track Progress</text>
  </g>
  
  <!-- Arrow 3 -->
  <path d="M 510 140 L 540 140" stroke="#3aa0ff" stroke-width="3" fill="none" marker-end="url(#arrowhead)"/>
  
  <!-- Settle -->
  <g transform="translate(50, 220)">
    <rect x="0" y="0" width="100" height="80" rx="12" fill="url(#accentGradient)" opacity="0.1" stroke="#3aa0ff" stroke-width="2"/>
    <text x="50" y="30" text-anchor="middle" fill="#3aa0ff" font-family="IBM Plex Sans, sans-serif" font-size="14" font-weight="600">SETTLE</text>
    <text x="50" y="50" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Calculate Profit</text>
    <text x="50" y="65" text-anchor="middle" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Distribute Returns</text>
  </g>
  
  <!-- Milestone Indicators -->
  <circle cx="300" cy="200" r="4" fill="#6ba07a"/>
  <circle cx="300" cy="220" r="4" fill="#6ba07a"/>
  <circle cx="300" cy="240" r="4" fill="#6ba07a"/>
  
  <!-- Milestone Labels -->
  <text x="320" y="205" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Milestone 1: Contract Award</text>
  <text x="320" y="225" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Milestone 2: Production Start</text>
  <text x="320" y="245" fill="#9aa7b2" font-family="IBM Plex Sans, sans-serif" font-size="12">Milestone 3: Delivery Complete</text>
  
  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#3aa0ff"/>
    </marker>
  </defs>
</svg>


